# PhotonEntropy IoT Client Configuration

# Backend server URL
SERVER_URL=https://entropy.p5ina.dev

# Unique device identifier
DEVICE_ID=pi-001

# Collection settings
COLLECT_INTERVAL=30        # seconds between collections
SAMPLES_PER_COMMIT=500     # samples per commit
LIGHT_THRESHOLD=2000       # ADC value threshold (collect only in dark)
MIN_QUALITY=0.5            # minimum quality to submit

# ADC settings
ADC_ADDRESS=0x48           # ADS1115 I2C address
ADC_CHANNEL=0              # ADC channel (A0-A3)
SAMPLE_RATE=860            # samples per second
